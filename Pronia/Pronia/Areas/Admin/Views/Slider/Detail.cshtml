@model Slider;
@{
    ViewData["Title"] = "Slider Details";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12" style="display:flex; flex-direction:column; align-items:center; gap:25px">
            <div style="width:200px; height:auto; display:flex;justify-content:center;align-items:center">
                <img src="~/assets/images/website-images/@Model.Image" style="max-width:100%; height:auto;" />
            </div>
            <h4>Title: @Model.Title</h4>
            <h4>Description: @Model.Description</h4>
            <h4>Offer: @Model.Offer%</h4>
            <div style="display:flex; align-items:center; gap:20px;">
                <a class="btn btn-primary" asp-action="Index">Go Back</a>
            </div>
        </div>
    </div>
</div>


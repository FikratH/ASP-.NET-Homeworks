
@{
    ViewData["Title"] = "Slider";
}
@model List<Slider>

<div class="content-wrapper">
    <div class="row">
        </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <a href=""></a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Offer</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var SliderItem in Model)
                            {
                                <tr>
                                <td><img src="~/assets/images/website-images/@SliderItem.Image"/></td>
                                <td>@SliderItem.Title</td>
                                <td>@SliderItem.Offer%</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
        </div>

